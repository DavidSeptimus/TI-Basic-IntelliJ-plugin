<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>nl.petertillema.tibasic</id>
    <name>TI-Basic</name>
    <vendor url="https://petertillema.nl">Peter Tillema</vendor>
    <description>Edit your TI-Basic programs with this plugin and make use of advanced inspection to write optimized
        code
    </description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="TI-Basic file"
                implementationClass="nl.petertillema.tibasic.language.TIBasicFileType"
                fieldName="INSTANCE"
                language="TIBasic"
                extensions="basic"/>
        <lang.parserDefinition
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.parser.TIBasicParserDefinition"/>
        <lang.syntaxHighlighterFactory
                implementationClass="nl.petertillema.tibasic.syntax.TIBasicSyntaxHighlighterFactory"
                language="TIBasic"/>
        <colorSettingsPage
                implementation="nl.petertillema.tibasic.syntax.TIBasicColorSettingsPage"/>
        <lang.commenter
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.editor.TIBasicCommenter"/>
        <trailingSpacesOptionsProvider
                implementation="nl.petertillema.tibasic.editor.TIBasicTrailingSpacesOptionsProvider"/>
        <lang.foldingBuilder
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.editor.TIBasicLoopFoldingBuilder"/>
        <lang.formatter
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.editor.formatting.TIBasicFormattingModelBuilder"/>
        <codeStyleSettingsProvider
                implementation="nl.petertillema.tibasic.editor.formatting.TIBasicCodeStyleSettingsProvider"/>
        <langCodeStyleSettingsProvider
                implementation="nl.petertillema.tibasic.editor.formatting.TIBasicLanguageCodeStyleSettingsProvider"/>
        <lang.findUsagesProvider
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.refactoring.TIBasicFindLabelUsagesProvider"/>
        <localInspection
                enabledByDefault="true"
                language="TIBasic"
                groupKey="inspection.TIBasic.group.name"
                implementationClass="nl.petertillema.tibasic.inspections.TIBasicUnusedLabelInspection"
                key="inspection.TIBasic.unused.label.display.name"
                bundle="messages.TIBasicBundle"/>
        <localInspection
                enabledByDefault="true"
                language="TIBasic"
                groupKey="inspection.TIBasic.group.name"
                implementationClass="nl.petertillema.tibasic.inspections.TIBasicUnknownGotoTargetInspection"
                key="inspection.TIBasic.unknown.goto.target.display.name"
                bundle="messages.TIBasicBundle"/>
        <bundledColorScheme
                order="after Light"
                id="TIBasicSourceCoder3Light"
                path="themes/TIBasicSourceCoder3Light.xml"/>
        <bundledColorScheme
                order="after Dark"
                id="TIBasicSourceCoder3Dark"
                path="themes/TIBasicSourceCoder3Dark.xml"/>
        <lang.braceMatcher
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.editor.TIBasicPairedBraceMatcher"/>
        <lang.quoteHandler
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.editor.TIBasicQuoteHandler"/>
        <colorProvider
                implementation="nl.petertillema.tibasic.editor.TIBasicElementColorProvider"/>
        <enterHandlerDelegate
                implementation="nl.petertillema.tibasic.editor.formatting.TIBasicEndEnterHandler"/>
        <configurationType
                implementation="nl.petertillema.tibasic.run.TIBasicConfigurationType"/>
        <runConfigurationProducer
                implementation="nl.petertillema.tibasic.run.TIBasicRunConfigurationProvider"/>
        <runLineMarkerContributor
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.run.TIBasicRunLineMarkerContributor"/>
    </extensions>
</idea-plugin>